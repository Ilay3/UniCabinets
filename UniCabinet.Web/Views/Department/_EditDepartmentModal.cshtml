@model UniCabinet.Core.Models.ViewModel.Department.DepartmentAddEditVM

<div class="modal fade" id="editDepartmentModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="EditDepartment" asp-controller="Department" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Редактировать кафедру</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
                </div>
                <div class="modal-body">
                    <!-- Add a hidden field for return URL -->
                    <input type="hidden" name="returnUrl" value="@Context.Request.Path" />

                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class="mb-3">
                        <label>Название кафедры</label>
                        <input name="DepartmentName" class="form-control" value="@Model.DepartmentName" required />
                    </div>
                    <div class="mb-3">
                        <label for="FacultyId">Факультет</label>
                        <select name="FacultyId" id="FacultyId" class="form-select">
                            <option value="">-- Не привязан к факультету --</option>
                            @if (ViewBag.Faculties != null)
                            {
                                foreach (var faculty in ViewBag.Faculties)
                                {
                                    if (Model.FacultyId == faculty.Id)
                                    {
                                        <option value="@faculty.Id" selected>@faculty.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@faculty.Id">@faculty.Name</option>
                                    }
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                </div>
            </form>
        </div>
    </div>
</div>